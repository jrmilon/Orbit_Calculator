<Button>
    background_color: (0,0,0,0)
    background_normal: ""
    back_color: (45/255,45/255,45/255,1)
    color: (223/255,237/255,242/255,1)
    #border_radius: [18]
    canvas.before:
        Color:
            rgba: self.back_color
        Ellipse:
            pos: self.pos
            size: self.size
    on_press: self.back_color = (35/255,35/255,35/255,1)
    on_release: self.back_color = (45/255,45/255,45/255,1)
    #on_focus: self.back_color = (0,0,1,1)
    font_size: 80
    size_hint: (.2,.2)
<TextInput>
    background_normal: ""
    background_active: ""
    foreground_color: (5/155,175/255,242/255,1)
    background_color: (45/255,45/255,45/255,1)


<MainWidget>
    canvas.before:
        Color:
            rgba: (45/255, 45/255, 45/255, 1)
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: 15
        spacing: 5

        TextInput:
            multiline: False
            id: input_show
            text: "0"
            halign: "right"
            font_size: 80
            foreground_color: (223/255,237/255,242/255,1)
            size_hint: (1, 0.2)

        TextInput:
            multiline: False
            id: input_calc
            text: "="
            halign: "right"
            font_size: 120
            size_hint: (1, 0.4)

        GridLayout:
            cols: 4
            rows: 5
            spacing: 5
            Button:
                id: button_clear
                text: "C"
                color: (242/255,69/255,53/255,1)
                on_release: root.clear()

            Button:
                id: button_backspace
                text: ">>"
                on_press: root.backspace()
            Button:
                id: button_percent
                text: "%"
                on_press: root.insert_value("%")
            Button:
                id: button_plus
                text: "+"
                on_press: root.insert_value("+")
            Button:
                id: button_7
                text: "7"
                on_press: root.insert_value(7)
            Button:
                id: button_8
                text: "8"
                on_press: root.insert_value(8)
            Button:
                id: button_9
                text: "9"
                on_press: root.insert_value(9)
            Button:
                id: button_minus
                text: "-"
                on_press: root.insert_value("-")
            Button:
                id: button_4
                text: "4"
                on_press: root.insert_value(4)
            Button:
                id: button_5
                text: "5"
                on_press: root.insert_value(5)
            Button:
                id: button_6
                text: "6"
                on_press: root.insert_value(6)
            Button:
                id: button_multiplication
                text: "*"
                on_press: root.insert_value("*")
            Button:
                id: button_1
                size_hint: (0.2,0.2)
                text: "1"
                on_press: root.insert_value(1)
            Button:
                id: button_2
                text: "2"
                on_press: root.insert_value(2)
            Button:
                id: button_3
                text: "3"
                on_press: root.insert_value(3)
            Button:
                id: button_division
                text: "/"
                on_press: root.insert_value("/")
            Button:
                id: button_plus_minus
                size_hint: (0.2,0.2)
                text: "+/-"
                on_press: root.plus_minus()
            Button:
                id: button_0
                text: "0"

                on_press: root.insert_value(0)
            Button:
                id: button_decimal
                text: "."
                on_press: root.insert_value(".")
            Button:
                id: button_equal
                text: "="
                color: (5/155,175/255,242/255,1)
                on_press: root.equal()
